<% provide(:title, "Edit user") %>
<h1>Basic Info</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :zip_code, "Location" %>
      <%= f.text_field :zip_code, placeholder: "Zip Code" %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :user_type_type, "What are you?" %>
      <% if @user.user_type %>
        <%= f.text_field :user_type_type, placeholder: @user.user_type_type, readonly: true %>
      <% else %>
        <%= f.select :user_type_type,
                                   [['Model', 'Model'],
                                   ['Photographer', 'Photographer'],
                                   ['Business', 'Business'], 
                                   ['Make Up Artist', 'MakeupArtist'],
                                   ['Agency', 'Agency']], placeholder: "What are you?" %>
      <% end %>

      <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>

