<% provide(:title, "Edit photographer profile") %>
<h1>Photographer Specific Information</h1>

<div class="row">

  <div class="span6">
    <%= form_for(@photographer) do |f| %>
      <%= render 'shared/error_messages', object: @photographer %>

      <%= f.label :model_mayhem, "URL of Your Model Mayhem Profile" %>
      <%= f.text_field :model_mayhem_url %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>

</div>

