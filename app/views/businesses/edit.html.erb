<% provide(:title, "Edit Business profile") %>
<h1>Business Specific Information</h1>

<div class="row">
  <div class="span6"> 
    <%= render 'shared/user_photo_form' %>
    <%= render 'shared/user_photo_feed' %>
  </div>

  <div class="span6">
    <%= form_for(@business) do |f| %>
      <%= render 'shared/error_messages', object: @business %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>

</div>

