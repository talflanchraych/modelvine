<% provide(:title, "Edit model profile") %>
<h1>Model Specific Information</h1>

<div class="row">
  <div class="span6"> 
    <%= render 'shared/user_photo_form' %>
    <%= render 'shared/user_photo_feed' %>
  </div>

  <div class="span6">
    <%= form_for(@model) do |f| %>
      <%= render 'shared/error_messages', object: @model %>

      <%= f.label :birth_date %>
      <%= date_select :model, :birth_date %>

      <%= f.label :gender %>
      <%= f.select :gender, [['Male','Male'], ['Female', 'Female']] %>

      <%= f.label :height_feet %>
      <%= f.text_field :height_feet, :label => 'Height', :wrapper => false %>
      <%= f.label :heigh_inches %>
      <%= f.text_field :height_inches, :label => false, :wrapper => false %>

      <%= f.label :weight, 'Weight (Lbs)' %>
      <%= f.text_field :weight %>

      <%= f.label :ethnicity %>
      <%= f.select :ethnicity, 
        [['Caucasian','Caucasain'],
        ['African American/Black','African American/Black'],
        ['Asian','Asian'], 
        ['Middle Eastern','Middle Eastern'], 
        ['Pacific Islander','Pacific Islander'],
        ['Native American','Native American'],
        ['Other','Other']] 
      %>

      <%= f.label :eye_color %>
      <%= f.select :eye_color,
        [['Black','Black'],
        ['Blue','Blue'],
        ['Brown','Brown'],
        ['Gray','Gray'],
        ['Green','Green'],
        ['Hazel','Hazel'],
        ['Maroon','Maroon'],
        ['Multicolored','Multicolored'],
        ['Other','Other']
        ]
      %>

      <%= f.label :hair_color %>
      <%= f.select :hair_color,
        [['Brown','Brown'],
        ['Black','Black'],
        ['Blond','Blond'],
        ['White','White'],
        ['Blue','Blue'],
        ['Green','Green'],
        ['Multicolored','Multicolored'],
        ['Partly or Completely Bald', 'Bald'],
        ['Other','Other']
        ]
      %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>

</div>

