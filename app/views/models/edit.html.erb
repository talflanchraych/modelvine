      <%= f.label :weight, 'Weight (Lbs)' %>
      <%= f.text_field :weight %>

      <%= f.label :ethnicity %>
      <%= f.select :ethnicity, 
        [['Caucasian','Caucasain'],
        ['African American/Black','African American/Black'],
        ['Asian','Asian'], 
        ['Middle Eastern','Middle Eastern'], 
        ['Pacific Islander','Pacific Islander'],
        ['Native American','Native American'],
        ['Other','Other']] 
      %>

      <%= f.label :eye_color %>
      <%= f.select :eye_color,
        [['Black','Black'],
        ['Blue','Blue'],
        ['Brown','Brown'],
        ['Gray','Gray'],
        ['Green','Green'],
        ['Hazel','Hazel'],
        ['Maroon','Maroon'],
        ['Multicolored','Multicolored'],
        ['Other','Other']
        ]
      %>

      <%= f.label :hair_color %>
      <%= f.select :hair_color,
        [['Brown','Brown'],
        ['Black','Black'],
        ['Blond','Blond'],
        ['White','White'],
        ['Blue','Blue'],
        ['Green','Green'],
        ['Multicolored','Multicolored'],
        ['Partly or Completely Bald', 'Bald'],
        ['Other','Other']
        ]
      %>

      <%= f.label :model_mayhem, "URL of Your Model Mayhem Profile" %>
      <%= f.text_field :model_mayhem %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>

