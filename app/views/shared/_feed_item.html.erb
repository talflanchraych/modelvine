<li id="<%= feed_item.id %>", data-user-id=<%=feed_item.user.id%> >

  <!-- Call (:medium) to display :medium size -->
  <div>
      <%= image_tag feed_item.photo.url(:medium) %>
  </div>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="caption"><%= feed_item.caption %> | </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <span>
    <%= label_tag :default_photo %>
    <%= radio_button_tag 'receive_updates', 'no', feed_item.default_photo ? true : false, class: "set_default_photo" %>
  </span>
  <br/>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                      data: { confirm: "Are you sure?" },
                                      title: feed_item.caption %>
  <% end %>
  <div>Profile Picture? <%= feed_item.default_photo %></div>
</li>